<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >

    <g:HTMLPanel styleName="row">
        <div class="span12">
            <form class="form-horizontal" action="">
                <fieldset>
                    <legend>Options</legend>
                    <div class="control-group">
                        <label class="control-label">Words occurrence level: </label>

                        <div class="controls">
                            <g:TextBox ui:field="max" styleName="input-mini focused" text=""/>
                            <g:Label styleName="help-inline">Rare words</g:Label>
                            <g:TextBox ui:field="min" styleName="input focused inline" text=""/>
                            <g:Label styleName="help-inline">Common words</g:Label>
                        </div>
                    </div>
                    <script src='ui/html5slider.js'></script>

                    <!--<div class="control-group">
                        <label class="control-label">Text template:</label>

                        <div class="controls">
                            <g:TextBox ui:field="textTemplate" styleName="input span5 focused" text=""/>
                        </div>
                    </div>-->
                    <div class="control-group">
                        <label class="control-label">Subtitle template:</label>

                        <div class="controls">
                            <g:TextBox ui:field="subtitleTemplate" styleName="input span5 focused" text=""></g:TextBox>
                            <g:Button ui:field="preview" styleName="btn">Preview</g:Button>
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label">Phrasal verbs:</label>

                        <div class="controls">
                            <g:CheckBox ui:field="phrasalVerb"></g:CheckBox>
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label">Phrasal verbs template:</label>

                        <div class="controls">
                            <g:TextBox ui:field="phrasalVerbTemplate" styleName="input span5 focused" text=""></g:TextBox>
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label">Subtitle type:</label>

                        <div class="controls">
                            <g:RadioButton ui:field="subtitleTypeInText" name="IN_TEXT">In Text</g:RadioButton>
                            <g:RadioButton ui:field="subtitleTypeOnlyTranslation" name="ONLY_TRANSLATION">Only translation</g:RadioButton>
                        </div>
                    </div>




                    <div class="form-actions">
                        <g:Button ui:field="save" styleName="btn btn-primary">Save</g:Button>
                        <g:Button ui:field="restore" styleName="btn">Restore default options</g:Button>
                    </div>
                </fieldset>
            </form>
        </div>
    </g:HTMLPanel>
</ui:UiBinder> 