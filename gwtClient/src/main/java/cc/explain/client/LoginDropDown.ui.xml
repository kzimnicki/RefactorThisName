<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >


    <g:HTMLPanel>

        <g:Button ui:field="logout" styleName="btn btn-danger">Logout</g:Button>


        <g:HTMLPanel ui:field="loginDropDownArea" styleName="btn-group">
            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                Login <span class="caret"></span>
            </button>
            <g:FocusPanel ui:field="clickDiv">
                <g:HTMLPanel>
                    <ul class="dropdown-menu">
                        <fieldset style="padding: 10px;">
                            <g:TextBox ui:field="username" styleName="input"></g:TextBox>
                            <g:PasswordTextBox ui:field="password" styleName="input"></g:PasswordTextBox>
                            <div><g:Button ui:field="login" styleName="btn btn-primary btn-block">Log-In</g:Button></div><br/> <br/>
                            <div><g:Button ui:field="register" styleName="btn btn-info btn-block">Register</g:Button></div><br/><br/>
                            <div><g:Button ui:field="reset" styleName="btn btn-danger btn-block">Reset Password</g:Button></div>
                        </fieldset>
                    </ul>
                </g:HTMLPanel>
            </g:FocusPanel>
        </g:HTMLPanel>
    </g:HTMLPanel>



</ui:UiBinder> 