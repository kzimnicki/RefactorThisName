<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >

    <div class="row">
            <div class="span8">
                <form class="form-horizontal" action="">
                    <fieldset>
                        <legend>Register</legend>
                        <div class="control-group">
                           <g:Label class="control-label">Email: </g:Label>

                            <div class="controls">
                                <input ui:field="username" class="input-xlarge focused" />
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Password: </label>

                            <div class="controls">
                                <g:PasswordTextBox ui:field="pass" class="input-xlarge focused"/>
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Repeat Password: </label>

                            <div class="controls">
                                <g:PasswordTextBox ui:field="repeatPass" class="input-xlarge focused"/>
                            </div>
                        </div>
                        <div class="form-actions">
                            <button ui:field="register" class="btn btn-primary">Register</button>
                        </div>
                    </fieldset>
                </form>
            </div>
    </div>
</ui:UiBinder> 